
	
	<%= simple_form_for @pic do |f| %>
	<h2>
		<%= f.input :lesson %>
		<br/>

		<%= f.input :image, label: 'Upload image:' %>

		<br/>

		<%= f.input :emotion, label: 'How did you feel?', placeholder: 'Stoked, Jazzed, Super' %>
	</br>
		<%= f.input :learned, label: 'What did you learn?', placeholder: 'HTML, CSS, Rails, GitHub' %>
	</h2>

		<%= submit_tag 'Save', :class => 'btn btn-success btn-large' %>


	<% end %>

	
